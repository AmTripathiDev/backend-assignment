generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin { 
id String @id @default(cuid())
key String @unique
email String @unique
}

model Employee {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  LinkedInProfile String
  ProfileImageUrl String?
  aadharNumber String
}